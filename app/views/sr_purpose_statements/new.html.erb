<!-- Validation failure messages -->
<% if @sr_purpose_statement.errors.any? %>
  <% @sr_purpose_statement.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Sr Purpose Statement</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_sr_purpose_statement" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for purpose_statements_id -->
      <div class="form-group">
        <label for="purpose_statements_id" class="control-label">
          Purpose statements
        </label>

        <%= select_tag(:purpose_statements_id, options_from_collection_for_select(PurposeStatement.all, :id, :user_id, @sr_purpose_statement.purpose_statements_id), :class => "form-control") %>
      </div>

      <!-- Label and input for resume_id -->
      <div class="form-group">
        <label for="resume_id" class="control-label">
          Resume
        </label>

        <%= select_tag(:resume_id, options_from_collection_for_select(SavedResume.all, :id, :user_id, @sr_purpose_statement.resume_id), :class => "form-control") %>
      </div>

      <button class="btn btn-success">
        Create Sr Purpose Statement
      </button>
      or
      <a href="/sr_purpose_statements">Cancel</a>
    </form>
  </div>
</div>
