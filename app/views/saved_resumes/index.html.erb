<div class="page-header">
  <h1>
    Saved resumes
    <a href="/saved_resumes/new" class="btn btn-lg btn-success">New Saved resume</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Resume name</th>
        <th>Actions</th>
      </tr>

      <% @saved_resumes.each do |saved_resume| %>
      <tr>
        <td>
          <% if saved_resume.user.present? %>
            <a href="/users/<%= saved_resume.user.id %>">
              <%= saved_resume.user.email %>
            </a>
          <% end %>
        </td>
        <td><%= saved_resume.resume_name %></td>
        <td>
          <a href="/saved_resumes/<%= saved_resume.id %>" class="btn btn-primary">Show</a>
          <a href="/saved_resumes/<%= saved_resume.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_saved_resume/<%= saved_resume.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @saved_resumes, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
