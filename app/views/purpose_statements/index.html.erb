<div class="page-header">
  <h1>
    Purpose statements
    <a href="/purpose_statements/new" class="btn btn-lg btn-success">New Purpose statement</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @purpose_statements.each do |purpose_statement| %>
      <tr>
        <td><%= purpose_statement.user.email %></td>
        <td>
          <a href="/purpose_statements/<%= purpose_statement.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == purpose_statement.user %>
            <a href="/purpose_statements/<%= purpose_statement.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_purpose_statement/<%= purpose_statement.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
